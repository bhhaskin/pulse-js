{
  "name": "pulse-js",
  "version": "0.1.0",
  "description": "Tiny analytics sdk for browsers. Send events with Beacon/fetch to your backend.",
  "repository": "git@github.com:bhhaskin/pulse-js.git",
  "type": "module",
  "main": "./dist/pulse.cjs",
  "module": "./dist/pulse.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/pulse.mjs",
      "require": "./dist/pulse.cjs",
      "default": "./dist/pulse.browser.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && yarn build:types && rollup -c",
    "build:types": "tsc --project tsconfig.build.json",
    "build:watch": "rollup -c --watch",
    "dev": "vite examples",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "prepack": "yarn build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^18.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "typescript": "^5.4.5",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "packageManager": "yarn@4.10.3"
}
